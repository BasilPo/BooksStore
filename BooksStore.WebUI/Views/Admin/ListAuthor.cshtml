@model IEnumerable<BooksStore.Domain.Entities.Author>
@{
    ViewBag.Titles = "Admin: All Authors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3>All Authors</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-sm">
            <tr>
                <th class="text-right">Id</th>
                <th>Name</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.AuthorId</td>
                    <td>@Html.ActionLink(item.Name, "EditAuthor", new { item.AuthorId })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteAuthor", "Admin"))
                        {
                            @Html.Hidden("AuthorId", item.AuthorId)
                            <input type="submit" class="btn btn-outline-danger btn-sm" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Add a new author", "CreateAuthor", null, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger" })
    </div>
</div>
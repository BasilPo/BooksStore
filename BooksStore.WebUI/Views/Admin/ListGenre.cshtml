@model IEnumerable<BooksStore.Domain.Entities.Genre>
@{
    ViewBag.Titles = "Admin: All Genres";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3>All Genres</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-sm">
            <tr>
                <th class="text-right">Id</th>
                <th>Name</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.GenreId</td>
                    <td>@Html.ActionLink(item.Name, "EditGenre", new { item.GenreId })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteGenre", "Admin"))
                        {
                            @Html.Hidden("GenreId", item.GenreId)
                            <input type="submit" class="btn btn-outline-danger btn-sm" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Add a new genre", "CreateGenre", null, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger" })
    </div>
</div>